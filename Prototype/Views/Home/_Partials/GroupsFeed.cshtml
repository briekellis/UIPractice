@{
    int groupNumber = 8;
}
<head>
    <link rel="stylesheet" href="../css/groupFeed.css" />
</head>
<section class="scroll-container" onscroll="scrollFunction('postContainer')" id="postContainer">

    <!-- Mid Level Tools -->
    <div class="toolbar">

        <!-- Filter Dropdown -->
        <div class="dropdown">
            <button onclick="toggleDropdown('feedFilters')" class="btn btn-cosgear">
                <i class='bx bx-filter-alt'></i>
            </button>
            <div id="feedFilters" class="dropdown-content">

                <!-- Group Filters -->
                <div class="dropdown-filters">
                    <em>Show Posts From...</em>
                    <div class="scroll-container">
                        @for (int i = 0; i < groupNumber; i++)
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="groupCheck-@i" value="group-@i">
                                <label class="form-check-label" for="groupCheck-@i">Group @i</label>
                            </div>
                        }

                    </div>
                </div>

                <!-- Order By -->
                <div class="dropdown-filters">
                    <em>Order By...</em>
                    <div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="sortCheck1" value="sort1">
                            <label class="form-check-label" for="sortCheck1">Newest First</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="sortCheck2" value="sort2">
                            <label class="form-check-label" for="sortCheck2">Oldest First</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="sortCheck3" value="sort3">
                            <label class="form-check-label" for="sortCheck3">Most Activity First</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="sortCheck4" value="sort4">
                            <label class="form-check-label" for="sortCheck4">Least Activity First</label>
                        </div>
                    </div>
                </div>

                <!-- Sort By -->
                <div class="dropdown-filters">
                    <em>Category</em>
                    <div class="scroll-container">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="category1">
                            <label class="form-check-label" for="inlineCheckbox1">Help Request</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="category2">
                            <label class="form-check-label" for="inlineCheckbox2">WIP Hype</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="category3">
                            <label class="form-check-label" for="inlineCheckbox3">Standard</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox4" value="category4">
                            <label class="form-check-label" for="inlineCheckbox4">Showcase</label>
                        </div>
                    </div>
                </div>

                <div>
                    <button class="btn btn-cosgear" type="button" onclick="toggleDropdown()">Apply</button>
                    <button class="btn btn-outline-secondary" type="button" onclick="toggleDropdown()">Cancel</button>
                </div>
            </div>
        </div>

    </div>

    <!-- Posts -->
    <div class="container text-start">
        <div class="row">
            @for (int i = 0; i < 2; i++)
            {
                <!-- Post With No Images -->
                <div class="col-sm">
                    <div class="post-card ">
                        <em class="post-ghost post-time">1d ago</em>
                        <div class="d-inline">
                            <img src="../imgs/avatar.png" alt="Avatar" class="avatar d-inline-block">
                            <div class="post-header d-inline-block">
