@{
    int groupNumber = 8;
    Random rnd = new Random();
}
<head>
    <link rel="stylesheet" href="css/myGroups.css" />
</head>
<section class="scroll-container" onscroll="scrollFunction('groupsContainer')" id="groupsContainer">

    <!-- Mid Level Tools -->
    <div id="toolbar">

        <!-- Search -->
        <div class="input-group mb-3" id="groupSearch">
            <span class="input-group-text"><i class='bx bx-search'></i></span>
            <input type="text" class="form-control" aria-label="Search Groups">
        </div>

        <!-- Example single danger button -->
        <div class="dropdown dropstart">
            <button onclick="toggleDropdown('groupsFilters')" class="btn btn-cosgear">
                <i class='bx bx-filter-alt'></i>
                <i class='bx bxs-down-arrow'></i>
            </button>
            <div id="groupsFilters" class="dropdown-content" style="right: 5%;">

                <!-- Order By -->
                <div class="dropdown-filters">
                    <em>Order By...</em>
                    <div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="alphAsc" value="alphAsc">
                            <label class="form-check-label" for="alphAsc">Alphabetical (A to Z)</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="alphDesc" value="alphDesc">
                            <label class="form-check-label" for="alphDesc">Alphabetical (Z to A)</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="sortCheck1" value="sort1">
                            <label class="form-check-label" for="sortCheck1">Newest First</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="sortCheck2" value="sort2">
                            <label class="form-check-label" for="sortCheck2">Oldest First</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="sortCheck3" value="sort3">
                            <label class="form-check-label" for="sortCheck3">Most Activity First</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="sortCheck4" value="sort4">
                            <label class="form-check-label" for="sortCheck4">Least Activity First</label>
                        </div>
                    </div>
                </div>

                <div>
                    <button class="btn btn-cosgear" type="button" onclick="toggleDropdown('groupsFilters')">Apply</button>
                    <button class="btn btn-outline-secondary" type="button" onclick="toggleDropdown('groupsFilters')">Cancel</button>
                </div>
            </div>
        </div>

    </div>

    <!-- Group Lists -->
    <div class="container">
        @for (int i = 0; i < groupNumber; i++)
        {
            <div class="card group-card">
                <div class="card-body">
                    <a href="@Url.Action("GroupView", "Home")" class="img-container">
                        <img src="imgs/myGroups/group1.jpeg" class="" alt="...">
                    </a>
                    <div class="p-4">
                        <a href="@Url.Action("GroupView", "Home")">
                            <div class="align-middle">
                                <h2>Group @i</h2>
                                <div class="group-stats">
                                    <i class='bx bx-user-circle'></i>
                                    @rnd.Next(1, 50)

                                    <i class='bx bx-lock-open-alt'></i>
                                    Public
                                </div>
                            </div>
                        </a>
                        <div class="group-activity">
                            <div class="notification">
                                <i class='bx bx-conversation'></i>
                                <span class="position-absolute top-0 start-50 translate-middle p-2 bg-danger rounded-circle">
                                    <span class="visually-hidden">New alerts</span>
                                </span>
                            </div>
                            <div class="notification">
                                <i class='bx bx-images'></i>
                                <span class="position-absolute top-0 start-100 translate-middle p-2 bg-danger rounded-circle">
                                    <span class="visually-hidden">New alerts</span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

</section>
